{
    "manifest_version": 3,
    "name": "Propeller",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "clipboardRead",
        "clipboardWrite",
        "scripting"
    ],
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": ["http://*/*", "https://*/*"],
    "commands": {
        "copy-text": {
            "suggested_key": {
                "default": "Alt+Shift+C"
            },
            "description": "Copy text to clipboard"
        },
        "copy-mcq": {
            "suggested_key": {
                "default": "Alt+Shift+X"
            },
            "description": "Copy MCQ to clipboard"
        },
        "image": {
            "suggested_key": {
                "default": "Alt+Shift+K"
            },
            "description": "Copy Image to clipboard"
        }
    }
}
